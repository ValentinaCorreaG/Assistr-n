<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0DDE1"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginBottom="20dp"
            android:background="#E7E7E7"
            android:baselineAligned="false"
            android:gravity="center"
            android:text="Asistron"
            android:textAllCaps="false"
            android:textColor="#142157"
            android:textIsSelectable="false"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagenbuscar"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Usuario:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usuario"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Nombre:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nombreuser"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/borde_redondo"
            android:text=""
            android:paddingLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="CÃ©dula:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cedulauser"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/borde_redondo"
            android:hint=""
            android:paddingLeft="10dp"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Grupo:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/grupouser"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/borde_redondo"
            android:hint=""
            android:paddingLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Especialidad:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/especialidaduser"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/borde_redondo"
            android:hint=""
            android:paddingLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Telefono:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/telefonouser"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/borde_redondo"
            android:hint=""
            android:paddingLeft="10dp"
            android:textSize="20sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="#B0DDE1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/volverU"
                android:onClick="volvermU"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:text="Volver"
                android:layout_marginRight="25dp"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/guardarcambios"
                android:onClick="Editarusuario"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/borde_redondo_boton"
                android:text="Guardar"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>