<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0DDE1"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="#E7E7E7"
        android:baselineAligned="false"
        android:gravity="center"
        android:text="Asistron"
        android:textAllCaps="false"
        android:textColor="#142157"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#0000"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:background="@drawable/pop_up"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aprendiendo" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Aprendiendo a Nadar \n Entrenador: Nestor \n Piscina 1 \n Lunes y Jueves: 9-11"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inactivar"
                android:text="Inhactivar"


                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:text="Editar"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#0000"
        android:orientation="vertical"
        android:background="@drawable/pop_up"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/semilleroo" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Semillero \n Entrenador: Nestor \n Piscina 4 \n Martes y Jueves: 6-8"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button_red"
                android:layout_width="150dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inactivar"
                android:text="Inhactivar"


                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:text="Editar"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#0000"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:background="@drawable/pop_up"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/entrenamiento" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Entrenamiento \n Entrenador: Nestor \n Piscina 2 \n Lunes y Viernes: 3-5"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="150dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inactivar"
                android:text="Inhactivar"


                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:text="Editar"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#0000"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:background="@drawable/pop_up"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mayores" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mayores \n Entrenador: Nestor \n Piscina 2 \n Sabados y Domingos: 9-11"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inactivar"
                android:text="Inhactivar"


                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:text="Editar"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
